---
type Props = {
    platform: string;
    username: string;
};

const { platform, username } = Astro.props;
---

<a
    href={`https://www.${platform}.com/${username}`}
    target="_blank"
    class="bg-[#4c1d95] px-4 py-2 text-white">{platform}</a
>

<style>
    a {
        text-decoration: none;
    }
</style>
